<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/project_item_height"
        tools:context=".view.activity.MainActivity">

        <RelativeLayout
                android:layout_margin="@dimen/margin_report_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/tv_report_resume"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/project_item_name_height"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/project_name_text_size"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:textAlignment="viewStart"
                    android:text="teste"
                    android:gravity="start|center_vertical"/>

            <TextView
                    android:id="@+id/tv_reference_date"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/project_item_last_update_height"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/project_last_update_text_size"
                    android:textStyle="bold"
                    android:textAlignment="viewStart"
                    android:gravity="start|center_vertical"
                    android:text="Report date: 25/25/25"/>
        </RelativeLayout>

</android.support.v7.widget.CardView>