<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/project_item_height"
        tools:context=".view.activity.MainActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:padding="@dimen/project_item_padding"
                  android:orientation="horizontal">

        <ImageView
                android:id="@+id/project_item_image_view"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                tools:src="@drawable/ic_project_default_image"
                android:contentDescription="@string/project_photo_description"/>

        <RelativeLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/tv_project_name"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/project_item_name_height"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/project_name_text_size"
                    android:textStyle="bold"
                    android:textAlignment="viewStart"
                    android:text="teste"
                    android:gravity="start|center_vertical"/>

            <TextView
                    android:id="@+id/tv_last_update"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/project_item_last_update_height"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/project_last_update_text_size"
                    android:textStyle="bold"
                    android:textAlignment="viewStart"
                    android:gravity="start|center_vertical"
                    android:text="Last update: 25/25/25 25:25"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>